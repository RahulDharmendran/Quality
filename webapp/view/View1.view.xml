<mvc:View controllerName="qualityportal.controller.View1"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m">
    <Page id="page" title="{i18n>title}">
        <content>
            <TileContainer id="dashboardContainer">
                <StandardTile
                    icon="sap-icon://inspection"
                    title="{i18n>inspectionLotTitle}"
                    info="{i18n>inspectionLotInfo}"
                    press="onInspectionLotPress" />
                <StandardTile
                    icon="sap-icon://clipboard"
                    title="{i18n>resultRecordsTitle}"
                    info="{i18n>resultRecordsInfo}"
                    press="onResultRecordsPress" />
                <StandardTile
                    icon="sap-icon://accept"
                    title="{i18n>usageDecisionTitle}"
                    info="{i18n>usageDecisionInfo}"
                    press="onUsageDecisionPress" />
            </TileContainer>
        </content>
    </Page>
</mvc:View>
<mvc:View controllerName="qualityportal.controller.InspectionLot"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Page id="inspectionLotPage" title="{i18n>inspectionLotTitle}" showNavButton="true" navButtonPress="onNavBack">
        <content>
            <Table id="inspectionTable" items="{path: '/ZRD_QP_INSPECTIONSet'}" growing="true" growingThreshold="20">
                <headerToolbar>
                    <OverflowToolbar>
                        <Title text="Inspection Lots" level="H2"/>
                        <ToolbarSpacer/>
                    </OverflowToolbar>
                </headerToolbar>
                <columns>
                    <Column>
                        <Text text="{i18n>colInspectionLot}"/>
                    </Column>
                    <Column>
                        <Text text="{i18n>colMaterial}"/>
                    </Column>
                    <Column minScreenWidth="Tablet" demandPopin="true">
                        <Text text="{i18n>colType}"/>
                    </Column>
                    <Column minScreenWidth="Tablet" demandPopin="true">
                        <Text text="{i18n>colPlant}"/>
                    </Column>
                    <Column minScreenWidth="Tablet" demandPopin="true">
                        <Text text="{i18n>colDate}"/>
                    </Column>
                    <Column hAlign="End">
                        <Text text="{i18n>colQuantity}"/>
                    </Column>
                    <Column hAlign="Center">
                        <Text text="{i18n>colUD}"/>
                    </Column>
                </columns>
                <items>
                    <ColumnListItem>
                        <cells>
                            <ObjectIdentifier title="{Prueflos}"/>
                            <Text text="{MaterialNumber}"/>
                            <Text text="{InspectionType}"/>
                            <Text text="{Plant}"/>
                            <Text text="{path: 'CreatedDate', type: 'sap.ui.model.type.Date', formatOptions: { style: 'medium' }}"/>
                            <Text text="{LotQuantity}"/>
                            <ObjectStatus 
                                text="{= ${UsageDecisionCode} === 'A' ? 'Approved' : (${UsageDecisionCode} === 'R' ? 'Rejected' : 'Pending') }" 
                                state="{= ${UsageDecisionCode} === 'A' ? 'Success' : (${UsageDecisionCode} === 'R' ? 'Error' : 'Warning') }" 
                                icon="{= ${UsageDecisionCode} === 'A' ? 'sap-icon://accept' : (${UsageDecisionCode} === 'R' ? 'sap-icon://decline' : 'sap-icon://pending') }"/>
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
    </Page>
</mvc:View>
